<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b"
    tools:context=".UserGroupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/b11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:textSize="24dp"
                android:text="Adding Users"
                android:textAlignment="center"
                android:typeface="sans"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/round_corners5"
                android:onClick="addingUser"/>

            <Button
                android:id="@+id/b12"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:textSize="24dp"
                android:text="Create Groups"
                android:textAlignment="center"
                android:typeface="sans"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/round_corners5"
                android:onClick="createGroups"/>

            <Button
                android:id="@+id/b13"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:textSize="24dp"
                android:text="Remove Users"
                android:textAlignment="center"
                android:typeface="sans"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/round_corners5"
                android:onClick="removeUsers"/>

            <Button
                android:id="@+id/b14"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:textSize="24dp"
                android:text="User Permission"
                android:textAlignment="center"
                android:typeface="sans"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/round_corners5"
                android:onClick="userPermissions"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>