<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/d"
    tools:context=".InstanceManagementActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/b20"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:textSize="24dp"
                android:text="Create Backup"
                android:textAlignment="center"
                android:typeface="sans"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/round_corners5"
                android:onClick="createBackup"/>

            <Button
                android:id="@+id/b21"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:textSize="24dp"
                android:text="Restore Backup"
                android:textAlignment="center"
                android:typeface="sans"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/round_corners5"
                android:onClick="restoreBackup"/>

            <Button
                android:id="@+id/b22"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:textSize="24dp"
                android:text="Import Repository"
                android:textAlignment="center"
                android:typeface="sans"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/round_corners5"
                android:onClick="importRepository"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>